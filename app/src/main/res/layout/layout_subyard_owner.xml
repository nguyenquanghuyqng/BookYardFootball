<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffffa">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/menuborder" />
        <Button
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:id="@+id/btnUser"
            android:layout_width="32dp"
            android:layout_alignParentRight="true"
            android:layout_height="32dp"
            android:background="@drawable/user"/>





    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/layoutSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/yardname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SÂN HIỆP PHÚ"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="9dp"
            android:textColor="#ff00"
            />
        <TextView
            android:id="@+id/chusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trần Quốc Cường"
            android:layout_below="@id/yardname"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yardname"
            android:layout_toLeftOf="@id/chusan"
            android:text="Chủ sân :"
            />
        <ListView
            android:id="@+id/listviewYard"
            android:layout_below="@id/yardname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>
</RelativeLayout>