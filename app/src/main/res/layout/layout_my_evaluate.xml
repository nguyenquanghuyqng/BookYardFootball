<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beautifullbackground"
    tools:context=".View.MyEvaluate">
    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Chất Lượng"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <LinearLayout
        android:layout_below="@id/show"
        android:id="@+id/stargroub"
        android:layout_marginTop="10dp"
        android:background="@drawable/beautifullbackground"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="5"
        >
        <ImageView
            android:layout_weight="1"
            android:id="@+id/star1"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtviewNum"
            android:src="@drawable/star"
            android:layout_toRightOf="@+id/imageviewYard"
            />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/star2"
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txtviewNum"
            android:src="@drawable/star"
            android:layout_toRightOf="@+id/star1"
            />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/star3"
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txtviewNum"
            android:src="@drawable/star"
            android:layout_toRightOf="@+id/star2"
            />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/star4"
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txtviewNum"
            android:src="@drawable/star"
            android:layout_toRightOf="@+id/star3"
            />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/star5"
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txtviewNum"
            android:src="@drawable/star"
            android:layout_toRightOf="@+id/star4"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/demopic"
        android:layout_width="200dp"
        android:layout_below="@id/stargroub"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/loading"
        />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/demopic"
        >

    </ListView>
</RelativeLayout>